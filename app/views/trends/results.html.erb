<div class="d-flex">

  <div class="lg-container-card col-2 small-cuisine-card-container">
  <!-- Cuisine not selected -->
    <h1 class="home-rounded-card-header">Add to sort</h1>
    <% @unselectedcuisines.each do |c| %>
      <div class="small-cuisine-card mb-2 ">
        <div class="mx-auto">
            <div class="border-bottom-line-add-card">
              <%= link_to add_favorite_cuisines_path(cuisine_id: c.id), class:"small-cuisine-card-name-gray" do %>
                <span style="display:inline-block; width:18px; margin-right:5px">
                  <%= show_svg('plus-icon.svg') %>
                </span>
                <%= c.name %>
              <% end %>
            </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-10 css-behaving-of-scrowling">
  <!-- displayed cuisines -->



  <div class="row rectangle-white-bar">

    <%= form_tag results_path, method: :get do %>
      <%= hidden_field_tag :query,
        "name",
        class: "form-control" %>
        <%= submit_tag "Name" %>
    <% end %>

    <%= form_tag results_path, method: :get do %>
        <%= hidden_field_tag :attendance,
          "attendance",
          class: "form-control" %>
          <%= submit_tag "Attendance" %>
    <% end %>
    <%= form_tag results_path, method: :get do %>
        <%= hidden_field_tag :metrics,
          "av_rating",
          class: "form-control" %>
          <%= submit_tag "Rating" %>
    <% end %>

     <%= form_tag results_path, method: :get do %>
        <%= hidden_field_tag :metrics,
          "av_price_range",
          class: "form-control" %>
          <%= submit_tag "Price" %>
    <% end %>

     <%= form_tag results_path, method: :get do %>
        <%= hidden_field_tag :metrics,
          "no_restaurants",
          class: "form-control" %>
          <%= submit_tag "No Restaurants" %>
    <% end %>

  </div>

  <div class="row p-4">
    <% @favoritecuisines.each do |fc| %>
      <div class="col-6">
        <div class="card-product">
          <%= image_tag fc.cuisine.photo %>
          <div class="card-product-infos">
            <h2>
              <%= fc.cuisine.name %>
              <%= link_to favorite_cuisine_path(fc.id), method: :delete do %>
                <i class="fa fa-trash icon-color-gray" ></i>
              <% end %>
            </h2>
            <div class="m-1 d-flex my-3">
              <div class="">
                <p class="card-product-attendance mr-5">
                  Attendance: <%=  fc.cuisine.attendance(@city).floor%>
                </p>
                <p class="card-product-rating">
                  Rating:
                  <%=raw "<i class='fas fa-star icon-color-mustard'></i>" * fc.cuisine.av_rating %>
                </p>
              </div>
              <!-- IH comment:  passing the cuisine_id which will be used in the map view -->
              <%= link_to map_path(cuisine_id: fc.cuisine.id), class:"small-cuisine-card-find-location mt-1" do %>
                <i class="fas fa-map-marker-alt icon-color-mustard"></i> Find location
              <% end %>
              <div class="m-1 d-flex flex-grow-1 my-2">
                <div>
                  <p class="card-product-attendance mr-5">
                    Attendance: <%=  fc.cuisine.attendance(@city).floor%>
                  </p>
                  <p class="card-product-rating">
                    Rating:
                    <%=raw "<i class='fas fa-star icon-color-mustard'></i>" * fc.cuisine.av_rating %>
                  </p>
                </div>
                <div>
                  <p class="card-product-price-range mr-5">
                    Price:
                    <%= fc.cuisine.av_price_range %> $
                  </p>
                  <p class="card-product-no_restaurants">
                    No restaurants:
                    <%= fc.cuisine.no_restaurants %>
                  </p>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-2">
<!-- cuisine for comparison -->

    <% @comparisoncuisines.each do |fc| %>
      <%= fc.cuisine.name %>
      <%= link_to favorite_cuisine_uncompare_path(fc.id) do %>
        <i class="fa fa-trash" ></i>
        <% end %>
    <% end %>
  </div>
</div>



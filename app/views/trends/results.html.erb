<div class="d-flex">

  <div class="lg-container-card col-2 small-cuisine-card-container">
  <!-- Cuisine not selected -->
    <h1 class="home-rounded-card-header">Add to sort</h1>
    <% @unselectedcuisines.each do |c| %>
      <div class="small-cuisine-card mb-4">
        <div class="mx-auto d-flex">
          <div>
            <%= link_to c.name, add_favorite_cuisines_path(cuisine_id: c.id), class:"small-cuisine-card-name-gray" %>
          </div>
        </div>
        <!-- <p class="small-cuisine-card-name">lebanese</p> -->
      </div>
    <% end %>
  </div>

  <div class="col-10 no-margin-no-padding">
  <!-- displayed cuisines -->


  <div class="row rectangle-white-bar">

  <div></div>

<!--   <div class="form-check form-check-inline">
    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="name" checked>
    <label class="form-check-label" for="inlineRadio1">Name</label>
  </div> -->
<%= form_tag results_path, method: :get do %>
  <%= hidden_field_tag :query,
    "name",
    class: "form-control" %>
    <%= submit_tag "Name" %>
<% end %>

<%= form_tag results_path, method: :get do %>
    <%= hidden_field_tag :attendance,
      "attendance",
      class: "form-control" %>
      <%= submit_tag "Attendance" %>
<% end %>
<%= form_tag results_path, method: :get do %>
    <%= hidden_field_tag :metrics,
      "av_rating",
      class: "form-control" %>
      <%= submit_tag "rating" %>
<% end %>

 <%= form_tag results_path, method: :get do %>
    <%= hidden_field_tag :metrics,
      "av_price_range",
      class: "form-control" %>
      <%= submit_tag "Price" %>
<% end %>

 <%= form_tag results_path, method: :get do %>
    <%= hidden_field_tag :metrics,
      "no_restaurants",
      class: "form-control" %>
      <%= submit_tag "No Restaurants" %>
<% end %>

  <%#= link_to results_path  do  %>
    <%# name :query,
    params[:query] %>
  <%# end %>


  </div>
  <div class="row p-4">
    <% @favoritecuisines.each do |fc| %>
      <div class="col-6">
        <div class="card-product">
          <%= image_tag fc.cuisine.photo %>
          <div class="card-product-infos">
            <h2>
              <%= fc.cuisine.name %>
              <%= link_to favorite_cuisine_path(fc.id), method: :delete do %>
                <i class="fa fa-trash icon-color-gray" ></i>
              <% end %>
            </h2>
            <div class="m-1 d-flex my-3">
              <div class="">
                <p class="card-product-attendance mr-5">
                  Attendance: <%=  fc.cuisine.attendance(@city).floor%>
                </p>
                <p class="card-product-rating">
                  Rating:
                  <%=raw "<i class='fas fa-star icon-color-mustard'></i>" * fc.cuisine.av_rating %>
                </p>
              </div>
              <div class="">
                <p class="card-product-price-range mr-5">
                  Price:
                  <%= fc.cuisine.av_price_range %> $
                </p>
                <p class="card-product-no_restaurants">
                  No restaurants:
                  <%= fc.cuisine.no_restaurants %>
                </p>
              </div>
            </div>

            <!-- IH comment:  passing the cuisine_id which will be used in the map view -->
            <%= link_to map_path(cuisine_id: fc.cuisine.id), class:"small-cuisine-card-name-gray" do %>
              <i class="fas fa-map-marker-alt icon-color-mustard"></i> Find location
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>



  </div>

  <div class="col-2">
<!-- cuisine for comparison -->

    <% @comparisoncuisines.each do |fc| %>
      <%= fc.cuisine.name %>
      <%= link_to favorite_cuisine_uncompare_path(fc.id) do %>
        <i class="fa fa-trash" ></i>
        <% end %>
    <% end %>
  </div>
</div>



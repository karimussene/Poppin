<div class="container mt-5">
  <h1><strong>My favorites</strong></h1>
  <h4 class="mb-5 muted">Cuisines in <strong>Sydney</strong> for <strong>January</strong> - <strong>December</strong></h4>

  <% @matches.each do |match| %>
    <div class="card-product m-2">
      <!-- Image plus info -->
      <div class="d-flex">
        <%= image_tag match.cuisine.photo %>

        <div class="d-flex flex-grow-1 d-flex justify-content-between p-3 mx-2">
          <div class="border-right-line-add-card">
            <h2 class="mb-3"><%= match.cuisine.name %></h2>
            <div class="d-flex">
              <%= link_to map_path(cuisine_id: match.cuisine.id, season: match.season) do %>
                <div class="btn btn-yellow btn-yellow-smaller px-4">
                  <i class="fas fa-map-marker-alt"></i> Show on map
                </div>
              <% end %>
            </div>
          </div>

          <div class="card-product-price-range ml-3">
            <span class ="card-product-metric-title" title ="Ranking by attendance">Ranking</span>
            <span class="d-block pl-2" >
              <span class="badge badge-warning badge-ranking"> <%= match.cuisine.ranking %></span>
            </span>
          </div>

          <div class="card-product-attendance">
            <span class ="card-product-metric-title" title="Average people by restaurant every month"> Av. Attendance </span>
            <p><%=  match.cuisine.av_attendance(match.city, match.season).floor %> people / mth</p>
          </div>

          <div class="card-product-rating">
            <span class ="card-product-metric-title" title="Average rating of all restaurants of this cuisine">Rating </span>
            <p><%= match.cuisine.av_rating.to_f %> / 5</p>
          </div>

          <div class="card-product-price-range">
            <span class ="card-product-metric-title" title = "Average money spend by customer per visit">Price </span>
            <p><%= match.cuisine.av_price_range %> $</p>
          </div>

          <div class="card-product-no_restaurants">
            <span class ="card-product-metric-title" title="No restaurants of this cuisine in the city">No. restaurants </span>
            <p class="pl-5
            4"><%= match.cuisine.no_restaurants %></p>
          </div>

          <div class="flex-shrink-1 ">
            <%= link_to match_path(match), method: :delete, class: "cuisine-comparison-horizontal-card-button_delete" do %>
              <div></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

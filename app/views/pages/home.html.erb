<!-- BANNER -->
<div class="banner-home" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(http://www.joinenjoy.com.ph/wp-content/uploads/2018/07/Insadong-Bimbibap-1280x580.jpg)">

  <div class="container">
    <!-- TITLE -->
    <div class="row col col-lg-12">
      <h1 class="header-banner-home">Whatâ€™s Poppin?</h1>
    </div>
    <div class="row d-fle x justify-content-between">
      <div class="col col-lg-6">
        <!-- TEXT -->
        <div class="text-banner-home">
          You want to create exciting pop-up restaurants? Let us show you what's <strong id="text-banner-home-bold">poppin</strong> in the city of your choice so people pop-in!
        </div>

        <!-- MAP WITH ICON -->
        <div>
          <%= show_svg('home-map.svg') %>
        </div>
      </div>
      <!-- CARD -->
      <div class="home-rounded-card col col-lg-6">
        <!-- CARD MUSTARD LINE-->
        <div class="rectangle-mustard-card"></div>
        <!-- CARD CONTENT-->
        <div class="home-rounded-content">
          <!-- CARD SEARCHBAR TITLE-->
          <div class="home-rounded-card-header">City</div>
          <!-- CARD SEARCHBAR-->

            <%= form_tag cuisines_path, method: :get do %>
              <div class="form-group">

                <div class="input-group-prepend mb-3">
                  <span class="input-group-text search-bar-icon">
                    <i class="fas fa-search text-secondary"></i>
                  </span>
                <%= text_field_tag :city,
                    params[:query],
                    class: "form-control search-bar-bar",
                    placeholder: "What city would you like to analyse?"
                %>
                </div>
              </div>

              <div class="home-rounded-card-header">Season</div>

              <div class="row">
                <div class="col-6">
                  <div class="form-group">
                    <%#= label_tag :start_period, params[:start_period], class: "color-disabled" %>
                    <%= select_tag :start_period, month_options, prompt: "Start period", class: "form-control " %>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-group">
                    <%#= label_tag :end_period, params[:end_period], class: "color-disabled" %>
                    <%= select_tag :end_period, month_options, prompt: "End period", class:"form-control" %>
                  </div>
                </div>
              </div>
              <div class="d-flex justify-content-center">
                <%= submit_tag 'Explore', class: 'btn btn-lg btn-outline-mustard btn-lg-home' %>
            </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
